{
  "name": "use-clock-source",
  "version": "1.1.0",
  "description": "A centralized timing system for React applications with synchronized animations and timed events",
  "author": "Emma Levesque <hi@emmalevesque.xyz>",
  "license": "MIT",
  "homepage": "https://github.com/emmalevesque/use-clock-source#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/emmalevesque/use-clock-source.git"
  },
  "bugs": {
    "url": "https://github.com/emmalevesque/use-clock-source/issues"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "prepublishOnly": "pnpm run build",
    "preview": "pnpm run build && pnpm pack --dry-run",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "semantic-release": "semantic-release",
    "release:dry-run": "semantic-release --dry-run"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.0.0",
    "@types/jest": "^30.0.0",
    "@types/next": "^9.0.0",
    "@types/node": "^24.5.2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "next": "^13.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "semantic-release": "^24.2.9",
    "ts-jest": "^29.4.4",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "react",
    "timing",
    "animation",
    "clock",
    "context",
    "hook",
    "typescript",
    "synchronized",
    "events",
    "requestanimationframe",
    "performance"
  ],
  "engines": {
    "node": ">=20.8.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
